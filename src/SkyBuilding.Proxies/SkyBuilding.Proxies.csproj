<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFrameworks Condition="'$(LibraryFrameworks)'==''">net461;net452;net451;net45;net40;netstandard2.0;</TargetFrameworks>
    <TargetFrameworks Condition="'$(LibraryFrameworks)'!=''">$(LibraryFrameworks)</TargetFrameworks>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Version>1.0.0</Version>
    <Authors>Tiny Lit</Authors>
    <Company>Tiny Lit</Company>
    <Description>A simple and efficient agent framework based on emit.</Description>
    <PackageLicenseUrl></PackageLicenseUrl>
    <RepositoryUrl>https://github.com/tinylit/SkyBuilding</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>https://github.com/tinylit/skybuilding/blob/master/LICENSE.txt</Copyright>
    <PackageIconUrl>https://raw.githubusercontent.com/tinylit/skybuilding/master/icon.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/tinylit/skybuilding</PackageProjectUrl>
  </PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
		<PackageReference Include="System.Reflection.Emit" Version="4.6.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\SkyBuilding\SkyBuilding.csproj" />
	</ItemGroup>

</Project>
